{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "javascript",
    "graphql",
    "html",
    "yaml",
    "json",
    "python"
  ],
  "explorer.icon.enableNerdfont": true,
  "explorer.keyMappings.global": {
    "<cr>": [
      "expandable?",
      "expand",
      "open"
    ],
    "v": "open:vsplit"
  },
  "explorer.previewAction.onHover": false,
  "explorer.width": 30,
  "python.pythonPath": "python",
  "python.venvPath": ".env",
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "~/.pyenv/shims/black",
  "python.formatting.blackArgs": [
    "-l",
    "120"
  ],
  "python.linting.enabled": true,
  "python.linting.flake8Path": "~/.pyenv/shims/flake8",
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": [
    "--max-line-length",
    "120",
    "--ignore=E402,E203,E501,W503"
  ],
  "python.sortImports.path": "~/.pyenv/shims/isort",
  "python.sortImports.args": [
    "--profile",
    "black"
  ],
  "pyright.disableSelfClsNotAccessed": true,
  "pyright.disableDiagnostics": true,
  "snippets.ultisnips.directories": [
    "UltiSnips",
    "~/.config/nvim/snips"
  ]
}
